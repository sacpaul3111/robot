export VCENTER_USERNAME="vcenter_admin@vsphere.local"
export VCENTER_PASSWORD="vCenterPassword456!"
export VCENTER_SERVER="vcenter.domain.com"

#############################################################################
# Splunk Credentials (Required for test14)
#############################################################################
# Used for centralized logging validation (CIP-007 R4.1)
export SPLUNK_USERNAME="splunk_admin"
export SPLUNK_PASSWORD="SplunkPassword789!"
export SPLUNK_SERVER="splunk.domain.com"
export SPLUNK_PORT="8089"

#############################################################################
# CyberArk/Password Vault Credentials (Required for test16)
#############################################################################
# Used for password vault validation (CIP-007 R5.6)
export CYBERARK_USERNAME="vault_admin"
export CYBERARK_PASSWORD="CyberArkPassword012!"
export CYBERARK_SERVER="cyberark.domain.com"
