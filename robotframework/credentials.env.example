#############################################################################
# Ansible Tower/AWX Credentials (Required for test24)
#############################################################################
# Used for Ansible Tower/AWX job validation
# Note: Test 24 validates an existing job by its ID
export ANSIBLE_TOWER_URL="https://tower.domain.com"
export ANSIBLE_USERNAME="tower_admin"
export ANSIBLE_PASSWORD="TowerPassword678!"
export ANSIBLE_JOB_ID="12345"  # Set to the job ID you want to validate

#############################################################################
# RSA Authentication Server (Required for test18)
#############################################################################
# Used for RSA SecurID authentication validation
export RSA_SERVER="rsa.domain.com"
export RSA_PORT="5500"

#############################################################################
# SMTP/Mail Configuration (Required for test17)
#############################################################################
# Used for mail configuration validation
export SMTP_SERVER="mail.domain.com"
export SMTP_PORT="25"
export TEST_EMAIL_RECIPIENT="admin@domain.com"

#############################################################################
# NTP Configuration (Required for test7)
#############################################################################
# Used for time synchronization validation
export NTP_SERVER="ntpx.domain.com"

#############################################################################
# EDS (Enterprise Design Standards) Configuration
#############################################################################
# Path to EDS Excel file containing server specifications
export EDS_FILE_PATH="/path/to/eds_file.xlsx"
export EDS_SHEET_NAME="Server_Inventory"

#############################################################################
# Test Execution Settings
#############################################################################
# Robot Framework execution settings
export ROBOT_TIMEOUT="300"           # Default timeout in seconds
export ROBOT_LOG_LEVEL="INFO"        # Log level: TRACE, DEBUG, INFO, WARN, ERROR
export ROBOT_OUTPUT_DIR="results"    # Results output directory

# Ansible execution settings
export ANSIBLE_HOST_KEY_CHECKING="False"    # Disable SSH host key checking
export ANSIBLE_RETRY_FILES_ENABLED="False"  # Don't create retry files

#############################################################################
# Optional: Nexus Repository Configuration
#############################################################################
# Used for uploading test artifacts (configured in Itential/CI/CD)
export NEXUS_URL="https://nexus.company.com"
export NEXUS_REPOSITORY="robot-framework-artifacts"
export NEXUS_USERNAME="nexus_uploader"
export NEXUS_PASSWORD="NexusPassword901!"

#############################################################################
# Optional: Notification Settings
#############################################################################
# Email notifications for test results
export NOTIFICATION_EMAIL="test-results@domain.com"
export SMTP_NOTIFICATION_SERVER="smtp.domain.com"

# Slack notifications (if using)
export SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/WEBHOOK/URL"

#############################################################################
# Security Notes
#############################################################################
#
# 1. File Permissions:
#    chmod 600 credentials.env
#    chown yourusername:yourgroup credentials.env
#
# 2. Storage Location Options:
#    - /etc/robot_credentials.env (system-wide, requires root)
#    - ~/.robot_credentials.env (user-specific)
#    - /opt/robot/credentials.env (application-specific)
#
# 3. Loading Credentials:
#    source /etc/robot_credentials.env
#
# 4. Verifying Loaded:
#    echo $SSH_USERNAME
#    env | grep -E "(SSH|VCENTER|SPLUNK)"
#
# 5. Unsetting After Use (optional security measure):
#    unset SSH_PASSWORD VCENTER_PASSWORD SPLUNK_PASSWORD
#    # (will need to re-source for next execution)
#
#############################################################################
